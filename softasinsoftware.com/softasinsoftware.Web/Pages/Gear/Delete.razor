@page "/gear/delete/{GearId:int}"

<h3>Delete Gear Item</h3>

<div class="form-group">
    <h4>Do you want to delete this gear item?</h4>
    <table class="table">
        <tbody>
            <tr>
                <td>Name</td>
                <td>@GearItem.Name</td>
            </tr>
            <tr>
                <td>Address</td>
                <td>@GearItem.Description</td>
            </tr>
            <tr>
                <td>URL</td>
                <td>@GearItem.URL</td>
            </tr>
            <tr>
                <td>Short URL</td>
                <td>@GearItem.ShortURL</td>
            </tr>
            <tr>
                <td>URL NL</td>
                <td>@GearItem.URLAmazonNL</td>
            </tr>
            <tr>
                <td>Short URL NL</td>
                <td>@GearItem.ShortURLAmazonNL</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="form-group">
    <input type="submit" value="Delete" @onclick="(async () => await RemoveGearItem(GearItem.Id))" class="btn btn-danger" />
    <input type="submit" value="Cancel" @onclick="(() => Cancel())" class="btn btn-warning" />
</div>