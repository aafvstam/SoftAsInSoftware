@page "/"
@page "/home"

@using softasinsoftware.Web.Components

<Announcement></Announcement>

<h1 class="col-md-12 text-center">Previous Recorded Soft as in Software Videos</h1>

<p class="col-md-12 text-center">Here you can find previous recorded videos from the Soft as in Software YouTube Channel. There videos are recordings of Live Coding sessions on the subject of .NET Core, Blazor and/or Office Development.</p>

@if (Videos == null || Videos.YouTubeVideos == null || Videos.YouTubeVideos.Count() == 0)
{
    <div class="row">
        <div class="text-center">
            <div class="spinner"></div>
        </div>
    </div>
}
else
{
    <div class="row mt-3">
        <div class="card-deck">
            @foreach (var video in Videos.YouTubeVideos)
            {
                <YouTubeShow YouTubeVideo=video />
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center my-3">
            <a href="@Videos.MoreVideosUrl" class="btn btn-primary" target="_blank">See More Episodes</a>
        </div>
    </div>
}
